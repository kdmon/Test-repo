function showWord (wordIndex) {

    
    // this updates the words details page
    var translation ="<h1 style='color:red'>"+ words[wordIndex].English +"</h1>";
    
    if (words[wordIndex].French){
        translation +="<h2 style='color:blue'>"+ words[wordIndex].French +"</h2>";
    }
    
    if (words[wordIndex].Sanskrit){
        translation +="<h2 style='color:green'>"+words[wordIndex].Sanskrit+"</h2>";
    }
    
    if (words[wordIndex].image){
        translation +='<img src="'+words[wordIndex].image+'">';
;
    }
    
    if (words[wordIndex].video){
        translation +='<br/><br/><iframe width="100%" height="315" src="//www.youtube.com/embed/' + words[wordIndex].video + '" frameborder="0" allowfullscreen></iframe>';
;
    }
    if (words[wordIndex].Benefits){
        translation +="<h3 style='color:purple'>"+words[wordIndex].Benefits+"</h3>";
    }
    var wordContainer = document.getElementById("wordDetails");
    wordContainer.innerHTML = translation;

    // this opens the word details page
    $.mobile.changePage('#item', {role: 'dialog'});   

}

function sortByKey(array, key) {
    return array.sort(function(a, b) {
        var x = a[key]; var y = b[key];
        return ((x < y) ? -1 : ((x > y) ? 1 : 0));
    });
}

words = sortByKey(words, 'English');

$( "#list" ).live ( "pageinit", function( event ) {
 
 

 $("#wordList").append ('<li data-role="list-divider">Yoga postures</li>');
    
     for (i=0; i<words.length; i++) {
        if(words[i].class == "posture")
       { $("#wordList").append ('<li><a data-role="button" href="javascript: showWord(' + i + ');"><img data-icon="true" src="' + words[i].image + '">' + words[i].English  + '</a></li>');}

}
 $("#wordList").append ('<li data-role="list-divider">Names of body parts</li>');
 
    for (i=0; i<words.length; i++) {
        if(words[i].class == "body")
       { $("#wordList").append ('<li><a data-role="button" href="javascript: showWord(' + i + ');">' + words[i].English  + '</a></li>');}
    }
   
 $("#wordList").append ('<li data-role="list-divider">Verbs</li>');
 for (i=0; i<words.length; i++) {
        if(words[i].class == "verb")
       { $("#wordList").append ('<li><a data-role="button" href="javascript: showWord(' + i + ');">' + words[i].English  + '</a></li>');}
    }

 // this makes sure the buttons are styled
    $("#wordList").listview("refresh");
});

